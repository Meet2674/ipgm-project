<%- include("header") %>

<section class="section-spacing bottom-none inverse-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title text-center">
          <h2><span>Gallery</span></h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <ul id="filter-list">
          <li class="filter active" data-filter="all">ALL</li>
          <li class="filter" data-filter="1">TECHNOLOGY</li>
          <li class="filter" data-filter="2">ART</li>
          <li class="filter" data-filter="3">MYSTERY</li>
          <li class="filter" data-filter="4">FICTION</li>
          <li class="filter" data-filter="5">SUSPENSE</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="gallery-outer">
    <ul class="gallery-items" id="article-holder" style="padding:0px; position: relative;height: 1261px;">
    </ul>
  </div>
</section>
<!-- jQuery -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/filterizr/2.2.4/jquery.filterizr.min.js"></script>
<%# <script src="load-gallery-articles.js"></script> %>
<script type="text/javascript">
$(document).ready(function() {
  console.log('success');
  var yourarticles = <%-JSON.stringify(article)%>
  // Your Articles render
  var markup1 = '<li class="filtr-item " data-category="${category}" style="opacity: 1; transform: scale(1) translate3d(0px,0px,0px);backface-visibility: hidden;';
var markup2 = 'perspective: 1000px; transform-style: preserve-3d; position: absolute;transition: all 0.5s ease-in-out 0ms; pointer-events: auto;"><div class="card article-cards" style="width: 18rem;display: inline-block;"><div class="card-body border border-dark "><h5 class="card-title">${title}</h5><h6 class="card-subtitle mb-2 text-muted">${author}</h6><p class="card-text">${shortdesc}.</p></div></div></li>';


  $.template("cardTemplate", markup1+markup2);
  $.tmpl("cardTemplate", yourarticles).appendTo("#article-holder");
});
</script>
<script src="gallery_animation.js"></script>
